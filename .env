# Flask Security Key (MANDATORY)
SECRET_KEY=Your_Long_And_Random_Secret_Key_Here

# Database Configuration (Ensures petpal.db is located)
SQLALCHEMY_DATABASE_URI=sqlite:///petpal.db

# Flask-Mail Configuration (The Permanent Fix)
# Use a service like Mailtrap, MailHog, or a real SMTP server for testing.
MAIL_SERVER=smtp.example.com  # e.g., smtp.mailtrap.io
MAIL_PORT=587               # e.g., 2525
MAIL_USE_TLS=True           # Set to False if using a local service like MailHog
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_DEFAULT_SENDER="PetPal Admin <noreply@petpal.com>"

# Optional: Set Flask Debug Mode for development
FLASK_DEBUG=1
